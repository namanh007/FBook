<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appbar_linear"
    android:layout_width="match_parent"
    android:layout_height="@dimen/AppBarSize"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/appbar_view_leftIcon"
        android:layout_width="@dimen/AppBarSize"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:padding="@dimen/_8sdp" />

    <TextView
        android:id="@+id/appbar_textView_title"
        style="@style/LargeTextDarkTheme"
        android:layout_width="0dp"
        android:textAllCaps="true"
        android:fontFamily="@font/hind_siliguri_light"
        android:letterSpacing="0.1"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/Text5"
        android:text="@string/app_name"
        android:textColor="@color/colorDescent" />

    <ImageView
        android:id="@+id/appbar_view_rightIcon"
        android:layout_width="@dimen/AppBarSize"
        android:layout_height="match_parent"
        android:padding="@dimen/_8sdp"
        android:scaleType="centerInside" />

</LinearLayout>


