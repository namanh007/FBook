<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edt_user_id"
        android:layout_width="217dp"
        android:layout_height="41dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/bottom_line_green"
        android:ems="10"
        android:hint="Email/Phone number"
        android:textColor="@color/Green"
        android:inputType="textPersonName"
        android:textColorHint="@color/GreenSea"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="217dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="@color/GreenSea"
        android:background="@drawable/bottom_line_green"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/edt_user_id"
        app:layout_constraintStart_toStartOf="@+id/edt_user_id"
        app:layout_constraintTop_toBottomOf="@+id/edt_user_id" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Log In"
        android:textStyle="bold"
        android:textColor="@color/Green"
        android:textSize="@dimen/_20sdp"
        android:background="@drawable/border_button"
        app:layout_constraintEnd_toEndOf="@+id/edt_pass"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/edt_pass"
        app:layout_constraintTop_toBottomOf="@+id/edt_pass" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/btn_login"
        app:layout_constraintTop_toBottomOf="@+id/edt_pass" />

    <TextView
        android:id="@+id/tv_fbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:text="F Book"
        android:textColor="@color/Green"
        android:textSize="@dimen/_30ssp"
        android:textStyle="bold|italic|normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="You forgot password?"
        android:textColor="@color/GreenSea"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/btn_login"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_login"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get help?"
        android:background="@drawable/bottom_line_primary"
        android:textColor="@color/Green"
        android:textStyle="normal|italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleimage1"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="16dp"
        android:src="@mipmap/gaidep"
        app:civ_border_width="@dimen/_2sdp"
        app:civ_border_color="@color/Green"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleimage2"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginEnd="16dp"
        android:src="@mipmap/gaidep"
        app:civ_border_color="@color/Green"
        app:civ_border_width="@dimen/_2sdp"
        app:layout_constraintEnd_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_fbook"
        app:layout_constraintStart_toStartOf="@+id/tv_fbook"
        app:layout_constraintTop_toBottomOf="@+id/tv_fbook"
        app:srcCompat="@mipmap/tim" />
</android.support.constraint.ConstraintLayout>