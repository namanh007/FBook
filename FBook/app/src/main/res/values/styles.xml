<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogFullScreen" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="DialogProcess" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Layout styles. -->
    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FillTheHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="FillTheWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemHorizontal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="ItemVertical">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ScaleItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="ParentLayout" parent="MatchParent">
        <item name="android:background">@color/LightBackground</item>
    </style>

    <style name="RowItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/RowItemSize</item>
        <item name="android:paddingLeft">@dimen/_12sdp</item>
        <item name="android:paddingRight">@dimen/_12sdp</item>
    </style>

    <style name="DialogLayout" parent="FillTheWidth">
        <item name="android:background">@drawable/drw_dialog_border</item>
        <item name="android:padding">1dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_82sdp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/_4sdp</item>
        <item name="android:paddingRight">@dimen/_4sdp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/ExtraTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogFooter">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="DialogButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/MediumPlusSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:text">@string/close</item>
        <item name="android:textSize">@dimen/LargeTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Text Styles-->
    <style name="SmallText" parent="WrapContent">
        <item name="android:textSize">@dimen/SmallTextSize</item>
        <item name="android:text">Small Text</item>
    </style>

    <style name="MediumText" parent="WrapContent">
        <item name="android:textSize">@dimen/MediumTextSize</item>
        <item name="android:text">Medium Text</item>
    </style>

    <style name="LargeText" parent="WrapContent">
        <item name="android:textSize">@dimen/LargeTextSize</item>
        <item name="android:text">Large Text</item>
    </style>

    <style name="SmallTextDarkTheme" parent="SmallText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MediumTextDarkTheme" parent="MediumText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LargeTextDarkTheme" parent="LargeText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SmallDigit" parent="WrapContent">
        <item name="android:textSize">@dimen/SmallTextSize</item>
        <item name="android:text">123</item>
    </style>

    <style name="MediumDigit" parent="WrapContent">
        <item name="android:textSize">@dimen/MediumTextSize</item>
        <item name="android:text">123</item>
    </style>

    <style name="LargeDigit" parent="WrapContent">
        <item name="android:textSize">@dimen/LargeTextSize</item>
        <item name="android:text">123</item>
    </style>

</resources>
